debian11cis_remote_log_server: "{{ debian11cis_remote_log_server }}"

### Section 5
debian11cis_sshd_limited: false
# Note the following to understand precedence and layout
debian11cis_sshd_access:
  - AllowUser
  - AllowGroup
  - DenyUser
  - DenyGroup

debian11cis_ssh_strong_ciphers:
{% for cipher in debian11cis_sshd.ciphers %}
  - {{ cipher }}
{% endfor %}
debian11cis_ssh_weak_ciphers:
  - 3des-cbc
  - aes128-cbc
  - aes192-cbc
  - aes256-cbc
  - arcfour
  - arcfour128
  - arcfour256
  - blowfish-cbc
  - cast128-cbc
  - rijndael-cbc@lysator.liu.se

debian11cis_ssh_strong_macs:
{% for mac in debian11cis_sshd.macs %}
  - {{ mac }}
{% endfor %}
debian11cis_ssh_weak_macs:
  - hmac-md5
  - hmac-md5-96
  - hmac-ripemd160
  - hmac-sha1
  - hmac-sha1-96
  - umac-64@openssh.com
  - umac-128@openssh.com
  - hmac-md5-etm@openssh.com
  - hmac-md5-96-etm@openssh.com
  - hmac-ripemd160-etm@openssh.com
  - hmac-sha1-etm@openssh.com
  - hmac-sha1-96-etm@openssh.com
  - umac-64-etm@openssh.com
  - umac-128-etm@openssh.com

debian11cis_ssh_strong_kex:
{% for kex in debian11cis_sshd.kex_algorithms %}
  - {{ kex }}
{% endfor %}
debian11cis_ssh_weak_kex:
  - diffie-hellman-group1-sha1
  - diffie-hellman-group14-sha1
  - diffie-hellman-group-exchange-sha1

debian11cis_ssh_aliveinterval: 300
debian11cis_ssh_countmax: 3
## PAM
debian11cis_pam_password:
  minlen: "14"
  minclass: "4"

debian11cis_pam_passwd_retry: "3"

